<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品进库"
            android:textSize="40dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品序号:" />

        <EditText
            android:id="@+id/button_Goodxuhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品库号:"/>
        <EditText
            android:id="@+id/button_Goodkuhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品号:"/>
        <EditText
            android:id="@+id/button_GoodNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品单价:"/>
        <EditText
            android:id="@+id/button_Goodprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableRow>
   <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品数量:"/>
    <EditText
        android:id="@+id/button_Goodnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/GoodComeOk"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_span="2"
            android:text="确认入库" />
    </TableRow>

</TableLayout>